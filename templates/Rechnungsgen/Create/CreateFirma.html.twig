{% extends 'base.html.twig' %}

{% block body %}
    <form method="post">

        <section class="contact-form-wrap section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="section-title text-center">
                            <h2 class="text-md mb-2">Firma</h2>
                            <div class="divider mx-auto my-4"></div>
                            <p class="mb-5"></p>
                        </div>
                    </div>
                </div>
                <b>Kundennummer:</b>
                <input type="text" id="kundnr" name="kundnr" value="">
                <p></p>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">


                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="name" id="name" type="text" class="form-control" placeholder="Name">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="email" id="email" type="email" class="form-control" placeholder="Email Address" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="telnr" id="telnr" type="text" class="form-control" placeholder="Telefonnummer" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="fest" id="fest" type="text" class="form-control" placeholder="Fntz.">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="adress" id="adress" type="text" class="form-control" placeholder="Adresse" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="city" id="city" type="text" class="form-control" placeholder="Stadt" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="plz" id="plz" type="text" class="form-control" placeholder="PLZ" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="uid" id="uid" type="text" class="form-control" placeholder="UID-Nr.">
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="fn" id="fn" type="text" class="form-control" placeholder="FN">
                                </div>
                            </div>
                        </div>

                        <div>
                            <input class="btn btn-main btn-round-full" name="submit" type="submit" value="Firma erstellen"></input>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
{% endblock %}
