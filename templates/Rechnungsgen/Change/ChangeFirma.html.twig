{% extends 'base.html.twig' %}

{% block body %}
    <section class="contact-form-wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center">
                        <h2 class="text-md mb-2">Produkt</h2>
                        <div class="divider mx-auto my-4"></div>
                        <p class="mb-5"></p>
                    </div>
                </div>
            </div>
            <b>Produktnummer:</b>
            <input type="text" name="Produktnummer" value="">
            <p></p>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <form id="contact-form" class="contact__form " method="post" action="mail.php">
                        <!-- form message -->
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-success contact__msg" style="display: none" role="alert">
                                    Your message was sent successfully.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="name" id="name" type="text" class="form-control" placeholder="Name" value="{{ firma.name }}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="price" id="price" type="text" class="form-control" placeholder="Email" value="{{ firma.email }}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="lager" id="lager" type="text" class="form-control" placeholder="Telefonnummer" value="{{ firma.tel }}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="mwst" id="mwst" type="text" class="form-control" placeholder="FNTZ." value="{{ firma.fntz }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="mwst" id="mwst" type="text" class="form-control" placeholder="adresse" value="{{ firma.adresse }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="mwst" id="mwst" type="text" class="form-control" placeholder="Stadt" value="{{ firma.stadt }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="mwst" id="mwst" type="text" class="form-control" placeholder="plz" value="{{ firma.plz }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="mwst" id="mwst" type="text" class="form-control" placeholder="FNTZ." value="{{ firma.fntz }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="mwst" id="mwst" type="text" class="form-control" placeholder="uid  " value="{{ firma.uid }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="mwst" id="mwst" type="text" class="form-control" placeholder="FNTZ." value="{{ firma.fntz }}">
                                </div>
                            </div>
                        </div>
                        <div class="form-group-2 mb-4">
                            <textarea name="info" id="info" class="form-control" rows="8" placeholder="UID" >{{ firma.uid }}</textarea>
                        </div>

                        <div>
                            <input class="btn btn-main btn-round-full" name="submit" type="submit" value="Produkt erstellen"></input>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
