{% extends 'base.html.twig' %}

{% block body %}
    <section class="contact-form-wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center">
                        <h2 class="text-md mb-2">Kunde</h2>
                        <div class="divider mx-auto my-4"></div>
                        <p class="mb-5"></p>
                    </div>
                </div>
            </div>
            <b>Kundennummer:</b>
            <input type="text" name="Kundennummer" value="{{ data.kundennummer }}">
            <p></p>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <form id="contact-form" class="contact__form " method="post" action="mail.php">
                        <!-- form message -->
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-success contact__msg" style="display: none" role="alert">
                                    Your message was sent successfully.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="name" id="name" type="text" class="form-control" placeholder="Name" value="{{ data.name }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="email" id="email" type="email" class="form-control" placeholder="Email Address" value="{{ data.email }}"required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="subject" id="subject" type="text" class="form-control" placeholder="Telefonnummer" value="{{ data.tel }}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="phone" id="phone" type="text" class="form-control" placeholder="Fntz." value="{{ data.fntz }}">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="adress" id="adress" type="text" class="form-control" placeholder="Adresse" value="{{ data.addresse }}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="city" id="city" type="text" class="form-control" placeholder="Stadt" value="{{ data.stadt }}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="plz" id="plz" type="text" class="form-control" placeholder="PLZ" value="{{ data.plz }}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="uid" id="uid" type="text" class="form-control" placeholder="UID-Nr." value="{{ data.uid }}">
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="fn" id="fn" type="text" class="form-control" placeholder="FN" value="{{ data.fn }}">
                                </div>
                            </div>
                        </div>

                        <div>
                            <input class="btn btn-main btn-round-full" name="submit" type="submit" value="Kunde erstellen"></input>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
